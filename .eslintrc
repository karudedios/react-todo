{
  "parser": "babel-eslint",

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],

  "plugins": [
    "react",
    "flowtype"
  ],

  "parserOptions": {
    "ecmaVersion": "2017",
    "sourceType": "module"
  },

  "rules": {
    "semi": 2,
    "no-console": 0
  },

  "env": {
    "node": true,
    "browser": true
  }
}
