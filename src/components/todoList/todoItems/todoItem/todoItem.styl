@require '../../../../stylus/variables';

li.todo-item
  padding 5px
  display flex
  flex-direction row
  background-color $accent
  justify-content space-between

  input[type=text]
    margin 0
    padding 0
    border none

    padding-left 5px

  .content, .remove, .edit
    height 30px
    font-size 18px
    line-height 30px

  .content
    width 100%
    cursor pointer
    padding-left 5px

  .remove, .edit
    width 30px
    color #000
    cursor pointer
    transition all 250ms ease

    &::before
      display flex
      justify-content center

    &:hover
      color $primary

  .remove
    &::before
      content "d"

    &:hover
      background-color $warning

  .edit
    &::before
      content "e"

    &:hover
      background-color $action

  &:nth-child(even)
    background-color $primary

  &.done
    background-color $disabled

    .edit
      display none

    .content
      text-decoration line-through
